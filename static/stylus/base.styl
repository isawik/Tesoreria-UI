
* margin 0 padding 0 

body
	background-position center	
	background-attachment fixed
	background-repeat no-repeat
	/*	background-image url(../../img/fondo_planta4.jpg)*/
	background-size 100%
	
.list-group
	overflow hidden
	position fixed
	width 200px
	background #F5F5F5
	float left
	font-weight bold
	height 100%
	border-right 2px solid #dddddd
	top 70px
	
	.aside-text 
		font-size 13px
		font-weight bold 
		padding 0px 10px
		
	.list-group-item 
		background #F5F5F5
		border 0px
		&:hover
			background #3E85C4
			color #F5F5F5
header
	width 100%
	height 70px
	color #fff
	background #0146AE
	font-family 'Strait', sans-serif
	position fixed
	top 0px

	h1
		padding-left 30px
		padding-right 20px
		/* font-family Helvetica, sans-serif */
		text-transform uppercase
		font-size 32px
		font-weight bold
		float left

	img
		float right
		padding-right 20px

	p 	
		padding-top 23px
		font-size 10px

		a
			color #D1D1DC
			padding 2px 2px
			&:hover 
				color #FFF
 
/* Definicion del bloque menu lateral --termina--*/
/* Definicion del bloque submenu */

nav 
	margin-left 200px
	height 30px
	top 70px
	width 100%
	position relative
	
.navbar 
	position fixed
	border-radius 0px
	border-bottom 2px solid #dddddd
	min-height 30px
	background #F5F5F5

	.breadcrumb
		font-size 10px
		display inherit
		background transparent

	.nav-text 
		font-size 10px
		font-weight bold
		padding 0px 5px

	.navbar-brand 
		padding 5px
		margin-left 10px

	.navbar-form 
		margin-top 4px

	.regresar
		cursor pointer


/* Definicion del bloque submenu --termina--*/
/* Definicion del bloque pie de pagina */
footer  
	font-family Helvetica, sans-serif 
	width 84%
	height 30px
	bottom 0
	position fixed 
	right 0
	margin-left 15%
	padding-top 4px
	background #000000
	color #757575 
	text-align center
	border-top 1px solid #000000
	box-shadow 2px 0px 9px rgba(0,0,0,0.35)

